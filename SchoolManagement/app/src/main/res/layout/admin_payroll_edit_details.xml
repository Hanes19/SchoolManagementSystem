<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_corners_white"
    android:paddingBottom="24dp">

    <!-- Drag Handle Indicator -->
    <View
        android:id="@+id/view_drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header Title -->
    <TextView
        android:id="@+id/tv_edit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Payroll Details"
        android:textColor="#1B254B"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/view_drag_handle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Close Button -->
    <ImageView
        android:id="@+id/btn_close_edit"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:tint="#A3AED0"
        android:padding="4dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_edit_title"
        app:layout_constraintTop_toTopOf="@id/tv_edit_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Form Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_edit_title"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Staff Name (Read Only) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Staff Member"
            android:textColor="#A3AED0"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Argus Filch - #STF-2025-004"
            android:textColor="#1B254B"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"/>

        <!-- Basic Salary Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic Salary"
            android:textColor="#1B254B"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F4F7FE"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_basic_salary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingHorizontal="16dp"
                android:text="1500.00"
                android:textColorHint="#A3AED0"
                android:textColor="#1B254B"
                android:textSize="14sp"
                android:inputType="numberDecimal"/>
        </androidx.cardview.widget.CardView>

        <!-- Allowances & Deductions Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Allowances Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allowances (+)"
                    android:textColor="#1B254B"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E8F5E9">
                    <!-- Light Green bg for additions -->

                    <EditText
                        android:id="@+id/et_allowances"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:paddingHorizontal="16dp"
                        android:text="400.00"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Deductions Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deductions (-)"
                    android:textColor="#1B254B"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFEBEE">
                    <!-- Light Red bg for deductions -->

                    <EditText
                        android:id="@+id/et_deductions"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:paddingHorizontal="16dp"
                        android:text="100.00"
                        android:textColor="#FF5252"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Remarks / Note -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adjustment Remarks (Optional)"
            android:textColor="#1B254B"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F4F7FE"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@null"
                android:padding="16dp"
                android:gravity="top|start"
                android:hint="e.g. Added overtime bonus for weekend shift."
                android:textColorHint="#A3AED0"
                android:textColor="#1B254B"
                android:textSize="14sp"
                android:inputType="textMultiLine"/>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_save_changes"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#4318FF"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Save Changes"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>