<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Transparent background to match the "outline" look of the prototype -->
    <solid android:color="#ffff"/>

    <!-- White border -->
    <stroke
        android:width="1dp"
        android:color="@color/Gray"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Optional: Add padding to ensure text doesn't touch the border -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp"/>
</shape>