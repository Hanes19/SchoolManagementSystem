<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="30dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Header -->
    <TextView
        android:id="@+id/tv_filter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filter &amp; Sort"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#1B254B"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:textColor="#F44336"
        android:textStyle="bold"
        android:layout_marginEnd="24dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_filter_title"
        app:layout_constraintTop_toTopOf="@id/tv_filter_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Separator -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F7FE"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_filter_title"/>

    <!-- Payment Status Section -->
    <TextView
        android:id="@+id/tv_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Status"
        android:textColor="#1B254B"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/status_chips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_status_label">

        <!-- Selected Chip Example -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All"
            android:textColor="#FFFFFF"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#1B254B"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paid"
            android:textColor="#A3AED0"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#F4F7FE"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending"
            android:textColor="#A3AED0"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#F4F7FE"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Overdue"
            android:textColor="#A3AED0"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#F4F7FE"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Class/Grade Section -->
    <TextView
        android:id="@+id/tv_grade_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Class Level"
        android:textColor="#1B254B"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/status_chips"
        app:layout_constraintStart_toStartOf="parent"/>

    <HorizontalScrollView
        android:id="@+id/scroll_grades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:scrollbars="none"
        android:paddingStart="24dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tv_grade_label">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 9"
                android:textColor="#A3AED0"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#F4F7FE"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 10"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#1B254B"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 11"
                android:textColor="#A3AED0"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#F4F7FE"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 12"
                android:textColor="#A3AED0"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#F4F7FE"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Sort By Section -->
    <TextView
        android:id="@+id/tv_sort_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By"
        android:textColor="#1B254B"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toBottomOf="@id/scroll_grades"
        app:layout_constraintStart_toStartOf="parent"/>

    <RadioGroup
        android:id="@+id/rg_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sort_label">

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount (High)"
            android:buttonTint="#1B254B"
            android:textColor="#1B254B"/>

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount (Low)"
            android:buttonTint="#1B254B"
            android:textColor="#1B254B"/>
    </RadioGroup>

    <!-- Apply Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_apply"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#111C44"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/rg_sort">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Apply Filters"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>