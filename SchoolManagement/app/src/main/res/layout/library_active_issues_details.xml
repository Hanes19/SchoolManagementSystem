<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Active Issue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B254B"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/actions_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <!-- Transaction Status Card (Styled for Active) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_status_indicator"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_popup_sync"
                        android:background="@drawable/rounded_corner_white_bg"
                        android:backgroundTint="#F4F7FE"
                        android:padding="10dp"
                        app:tint="#4318FF"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_status_pill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON TIME"
                            android:textColor="#4318FF"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:letterSpacing="0.1"/>
                        <TextView
                            android:id="@+id/tv_due_context"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5 Days Remaining"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Book and Student Identification -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CORE DETAILS"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Book Identity -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/book" app:tint="#4318FF" android:background="#F4F7FE" android:padding="10dp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:orientation="vertical">
                            <TextView android:text="Modern History of Espionage" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="ISBN: 1107-Z • Rack B-04" android:textColor="#A3AED0" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F4F7FE" android:layout_marginVertical="16dp"/>

                    <!-- Student Identity -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                        <ImageView android:layout_width="40dp" android:layout_height="40dp" android:src="@drawable/profile" app:tint="#1B254B" android:background="#F4F7FE" android:padding="10dp"/>
                        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_marginStart="12dp" android:orientation="vertical">
                            <TextView android:text="Natasha Romanoff" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="Grade 12-A • ID: STU-2025007" android:textColor="#A3AED0" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Timeline -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SCHEDULE"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="Issued On" android:textColor="#A3AED0" android:textSize="14sp" android:layout_height="wrap_content"/>
                        <TextView android:text="Oct 18, 2025" android:textColor="#1B254B" android:textStyle="bold" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F4F7FE" android:layout_marginVertical="12dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="Due Date" android:textColor="#A3AED0" android:textSize="14sp" android:layout_height="wrap_content"/>
                        <TextView android:text="Oct 29, 2025" android:textColor="#4318FF" android:textStyle="bold" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Helpful Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#E6FFF5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_dialog_info" app:tint="#05CD99"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No fines accumulated for this transaction."
                        android:textColor="#05CD99"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Actions Layer -->
    <LinearLayout
        android:id="@+id/actions_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F4F7FE">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="Send Reminder" android:textColor="#4318FF" android:textStyle="bold" android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_complete_return"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#111C44">
            <TextView android:layout_width="match_parent" android:layout_height="match_parent" android:text="Mark Returned" android:textColor="#FFFFFF" android:textStyle="bold" android:gravity="center"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>