                        android:layout_height="wrap_content"
                        android:text="Suspended"
                        android:textColor="#F44336"
                        android:background="#FFEBEE"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:textSize="12sp"
