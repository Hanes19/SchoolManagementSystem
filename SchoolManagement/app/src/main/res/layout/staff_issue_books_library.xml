<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg">

    <!-- Drag Handle for Popup feel -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="#1B254B"
                    android:background="@drawable/rounded_corner_white_bg"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Library Action"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1B254B"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="40dp">

                <!-- Action Toggle -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#F4F7FE"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Issue Book"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#4318FF"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Add New"
                            android:gravity="center"
                            android:padding="12dp"
                            android:textStyle="bold"
                            android:textColor="#A3AED0"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Book Details Form -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BOOK INFORMATION"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ISBN / Book ID"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:background="@drawable/rounded_corner_white_bg"
                                android:backgroundTint="#F4F7FE"
                                android:paddingHorizontal="16dp"
                                android:hint="Scan or Enter ID"
                                android:textSize="14sp"
                                android:inputType="text"/>
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_marginStart="8dp"
                                android:src="@android:drawable/ic_menu_camera"
                                android:padding="12dp"
                                app:tint="#FFFFFF"
                                android:background="@drawable/rounded_corner_white_bg"
                                android:backgroundTint="#4318FF"
                                tools:ignore="ContentDescription"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Student ID (Issued To)"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:paddingHorizontal="16dp"
                            android:hint="e.g. STU-2025-001"
                            android:textSize="14sp"
                            android:inputType="text"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Return Date"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nov 07, 2025"
                                android:textColor="#1B254B"
                                android:textSize="14sp"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="#A3AED0"
                                tools:ignore="ContentDescription"/>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Confirm Button (Scrolls up with the rest) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#111C44"
                    app:cardElevation="6dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Complete Issuance"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>