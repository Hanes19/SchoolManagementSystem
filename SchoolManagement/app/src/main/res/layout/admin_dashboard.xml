<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg"> <!-- Applies the grayish-blue gradient -->

    <!-- 1. SCROLLABLE CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_area">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- HEADER: Hi Admin + Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="30dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi Admin!"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#1B254B"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Good Morning"
                        android:textSize="16sp"
                        android:textColor="#ffff"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/app_logo"
                        android:scaleType="centerCrop"
                        android:background="#E0E5F2"
                        tools:ignore="ContentDescription"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- SEARCH BAR -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="27dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/search"
                        app:tint="#A3AED0"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search users, classes, or fees..."
                        android:textSize="16sp"
                        android:textColor="#A3AED0"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- WELCOME BANNER (Module 2 & 8 Overview) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academic Overview"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#1B254B"/>

                        <!-- Dynamic Text Field 1: Total Students (Module 2) -->
                        <TextView
                            android:id="@+id/text_total_students"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,250 Students Active"
                            android:textSize="14sp"
                            android:textColor="#A3AED0"
                            android:layout_marginTop="8dp"/>

                        <!-- Dynamic Text Field 2: Fees Collected (Module 8) -->
                        <TextView
                            android:id="@+id/text_fees_collected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$12,400 Fees Collected (92%)"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Decorative Illustration Placeholder -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/academic"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- MODULES GRID HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Core Management"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1B254B"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="view all"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- CORE MODULES GRID (Modules 2, 5, 8, 13) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="30dp">
                <!-- ROW 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- BUTTON 1: Users (Module 2) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_users_staff"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#111C44">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/date_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Records"
                                android:textColor="#A3AED0"
                                android:textSize="12sp"/>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/profile"
                                android:layout_alignParentEnd="true"
                                app:tint="#FFFFFF"
                                tools:ignore="ContentDescription"/>

                            <TextView
                                android:id="@+id/title_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Users &amp;\nStaff"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:layout_below="@id/date_1"
                                android:layout_marginTop="16dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="New Reg: 5"
                                android:textColor="#FFFFFF"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"/>

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:progress="75"
                                android:progressTint="#FFFFFF"
                                android:layout_alignParentBottom="true"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- BUTTON 2: Classes (Module 5) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_classes_sections"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/date_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Academic Structure"
                                android:textColor="#A3AED0"
                                android:textSize="12sp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="8dp"
                                app:cardBackgroundColor="#F4F7FE"
                                app:cardElevation="0dp"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="6dp"
                                    android:src="@drawable/timetable"
                                    app:tint="#1B254B"
                                    tools:ignore="ContentDescription"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/title_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Classes &amp;\nTimetable"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1B254B"
                                android:layout_below="@id/date_2"
                                android:layout_marginTop="16dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Needs Setup: 2"
                                android:textColor="#1B254B"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"/>

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:progress="40"
                                android:progressTint="#1B254B"
                                android:layout_alignParentBottom="true"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- ROW 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- BUTTON 3: Fees (Module 8) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_fees_billing"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/date_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Financial Status"
                                android:textColor="#A3AED0"
                                android:textSize="12sp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_alignParentEnd="true"
                                app:cardBackgroundColor="#F4F7FE"
                                app:cardCornerRadius="8dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="6dp"
                                    android:src="@drawable/finance"
                                    app:tint="#1B254B"
                                    tools:ignore="ContentDescription" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/title_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/date_3"
                                android:layout_marginTop="16dp"
                                android:text="Fees &amp;\nBilling"
                                android:textColor="#1B254B"
                                android:textSize="18sp"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:text="Pending: 8%"
                                android:textColor="#1B254B" />

                            <ProgressBar
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:layout_alignParentBottom="true"
                                android:progress="90"
                                android:progressTint="#1B254B" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- BUTTON 4: Config (Module 13) -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_system_config"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFFFFF">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/date_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Management"
                                android:textColor="#A3AED0"
                                android:textSize="12sp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                app:cardCornerRadius="8dp"
                                app:cardBackgroundColor="#F4F7FE"
                                app:cardElevation="0dp"
                                android:layout_alignParentEnd="true">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:padding="6dp"
                                    android:src="@drawable/settings"
                                    app:tint="#1B254B"
                                    tools:ignore="ContentDescription"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/title_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="System\nConfig"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1B254B"
                                android:layout_below="@id/date_4"
                                android:layout_marginTop="16dp"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check Logs"
                                android:textColor="#1B254B"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"/>

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="4dp"
                                android:progress="20"
                                android:progressTint="#1B254B"
                                android:layout_alignParentBottom="true"
                                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


            <!-- Quick Status Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Status"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B254B"
                android:layout_marginBottom="20dp"/>

            <!-- QUICK STATUS (Modules 7, 9, 11) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Status Item 1: Communications (Module 11) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_email"
                        app:tint="#FF9800"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3 Unread Messages from Teachers"
                        android:textColor="#1B254B"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        app:tint="#A3AED0"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>

                <!-- Status Item 2: Exams (Module 7) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#2196F3"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5 Pending Gradebook Submissions"
                        android:textColor="#1B254B"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        app:tint="#A3AED0"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>

                <!-- Status Item 3: Library (Module 9) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="#F44336"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="12 Library Books Overdue"
                        android:textColor="#1B254B"
                        android:layout_marginStart="16dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_send"
                        app:tint="#A3AED0"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 2. CUSTOM BOTTOM NAVIGATION -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_nav_area"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Icons Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:weightSum="5">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/home"
                app:tint="#1B254B"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/calendar"
                app:tint="#1B254B"
                tools:ignore="ContentDescription"/>

            <!-- Space for FAB -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="28dp"
                android:layout_weight="1"
                android:src="@drawable/finance"
                app:tint="#1B254B"
                tools:ignore="ContentDescription"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/profile"
                app:tint="#1B254B"
                tools:ignore="ContentDescription"/>
        </LinearLayout>

        <!-- Floating Action Button (FAB) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/fab_add_new"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="#111C44"
            app:cardElevation="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="+"
                android:textColor="#FFF"
                android:textSize="32sp"
                android:gravity="center"
                android:includeFontPadding="false"/>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>