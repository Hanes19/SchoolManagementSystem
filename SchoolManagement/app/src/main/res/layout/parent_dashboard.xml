<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome,"
                android:textColor="#1B254B"
                android:textSize="14sp"
                android:letterSpacing="0.02"/>
            <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mrs. Smith"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1B254B"/>
        </LinearLayout>

        <!-- Notification Bell -->
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tint="#1B254B"
                android:src="@drawable/ic_notification"
                android:padding="12dp"
                tools:ignore="ContentDescription"/>
        </androidx.cardview.widget.CardView>

        <!-- Parent Profile -->
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="2dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <!-- Child Selection Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SWITCH PROFILE"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_child_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1B254B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/profile"
                        android:background="@drawable/rounded_corner_white_bg"
                        android:backgroundTint="#40FFFFFF"
                        android:padding="10dp"
                        app:tint="#FFFFFF"
                        tools:ignore="ContentDescription"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tv_child_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jason Smith"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grade 10-A â€¢ Roll No. 23"
                            android:textColor="#E0E5F2"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:rotation="90"
                        app:tint="#FFFFFF"
                        tools:ignore="ContentDescription"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Urgent Payment Alert -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_fee_alert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="#FFEBEE"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_dialog_alert"
                        app:tint="#F44336"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Unpaid Fees: $1,200.00"
                        android:textColor="#F44336"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:layout_marginStart="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PAY NOW"
                        android:textColor="#F44336"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_corner_white_bg"
                        android:backgroundTint="#FFFFFF"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Navigation Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MY CHILD'S RECORD"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="32dp">

                <!-- Feature: Performance -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_report_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="44dp" android:layout_height="44dp" android:src="@android:drawable/star_on" app:tint="#4CAF50" android:background="#E8F5E9" android:padding="10dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Grades" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Feature: Attendance -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_attendance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="44dp" android:layout_height="44dp" android:src="@android:drawable/ic_menu_my_calendar" app:tint="#FF9800" android:background="#FFF3E0" android:padding="10dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Attendance" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Feature: Finance -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_fees_history"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="44dp" android:layout_height="44dp" android:src="@drawable/peso" app:tint="#4318FF" android:background="#F4F7FE" android:padding="10dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Billings" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- CLICK HERE FOR COMMUNICATION -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_contact_teacher"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="44dp" android:layout_height="44dp" android:src="@android:drawable/ic_dialog_email" app:tint="#9C27B0" android:background="#F3E5F5" android:padding="10dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Messages" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="14sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>

            <!-- Recent Activity -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LATEST UPDATES"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white_bg"
                android:padding="8dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_menu_edit" app:tint="#4318FF" android:background="#F4F7FE" android:padding="6dp" tools:ignore="ContentDescription"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:text="Midterm Grade Posted" android:textStyle="bold" android:textColor="#1B254B" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Jason scored 88/100 in Chemistry." android:textColor="#A3AED0" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F4F7FE" android:layout_marginHorizontal="12dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_popup_reminder" app:tint="#FF9800" android:background="#FFF3E0" android:padding="6dp" tools:ignore="ContentDescription"/>
                    <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                        <TextView android:text="School Notice" android:textStyle="bold" android:textColor="#1B254B" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        <TextView android:text="Annual Sports Day held this Friday." android:textColor="#A3AED0" android:textSize="12sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Log Out Button -->
            <TextView
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#F44336"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#FFEBEE"
                android:padding="16dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>