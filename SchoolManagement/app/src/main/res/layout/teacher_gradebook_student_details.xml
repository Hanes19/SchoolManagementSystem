<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="40dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Profile Summary Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/drag_handle">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/profile"
            android:background="#F4F7FE"
            android:padding="12dp"
            app:tint="#1B254B"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jason Smith"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1B254B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grade 10-A â€¢ ID: 2025091"
                android:textColor="#A3AED0"
                android:textSize="13sp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#4318FF"
            android:padding="8dp"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#F4F7FE"/>
    </LinearLayout>

    <!-- Performance Breakdown -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/profile_section">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PERFORMANCE BREAKDOWN"
            android:textColor="#A3AED0"
            android:textStyle="bold"
            android:textSize="11sp"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp"/>

        <!-- Breakdown Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins">

            <!-- Attendance -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F4F7FE">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical">
                    <TextView android:text="Attendance" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="95%" android:textSize="18sp" android:textStyle="bold" android:textColor="#05CD99" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Homework Avg -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F4F7FE">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical">
                    <TextView android:text="Homework" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="82/100" android:textSize="18sp" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quizzes Avg -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F4F7FE">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical">
                    <TextView android:text="Quizzes" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="90/100" android:textSize="18sp" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Behavior -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F4F7FE">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical">
                    <TextView android:text="Behavior" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:text="Excellent" android:textSize="18sp" android:textStyle="bold" android:textColor="#4318FF" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Teacher Remarks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEACHER REMARKS"
            android:textColor="#A3AED0"
            android:textStyle="bold"
            android:textSize="11sp"
            android:letterSpacing="0.1"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rounded_corner_white_bg"
            android:backgroundTint="#F4F7FE"
            android:gravity="top"
            android:padding="16dp"
            android:text="Jason shows great aptitude in Chemistry labs. Needs to focus slightly more on theoretical formulas."
            android:textColor="#1B254B"
            android:textSize="14sp"/>

        <!-- Close Button -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="28dp"
            app:cardBackgroundColor="#111C44"
            app:cardElevation="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Back to Gradebook"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>