<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Student"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B254B"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Main Form Container (Centered & Non-Scrolling) -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:weightSum="4">

            <!-- Field 1: Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:id="@+id/et_student_name"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:paddingHorizontal="16dp"
                    android:hint="e.g. John Doe"
                    android:textColor="#1B254B"
                    android:textSize="14sp"
                    android:inputType="textPersonName"/>
            </LinearLayout>

            <!-- Field 2: ID Number with Auto-Generate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ID Number"
                        android:textColor="#1B254B"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <!-- Auto Generate Action -->
                    <TextView
                        android:id="@+id/btn_generate_student_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-Generate"
                        android:textColor="#4318FF"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_student_id"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:paddingHorizontal="16dp"
                    android:hint="Click Auto-Generate"
                    android:textColor="#1B254B"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Field 3: Year / Level -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year / Class"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:paddingHorizontal="16dp"
                    android:hint="e.g. Grade 10"
                    android:textColor="#1B254B"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- Field 4: Email with Auto-Generate -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="4dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email Address"
                        android:textColor="#1B254B"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <!-- Auto Generate Action -->
                    <TextView
                        android:id="@+id/btn_generate_student_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-Generate"
                        android:textColor="#4318FF"
                        android:textStyle="bold"
                        android:textSize="12sp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_student_email"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:paddingHorizontal="16dp"
                    android:hint="e.g. name@school.edu"
                    android:inputType="textEmailAddress"
                    android:textColor="#1B254B"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Register Button (Pinned Bottom) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#111C44"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Register Student"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>