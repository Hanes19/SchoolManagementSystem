<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 1. HEADER -->
    <View
        android:id="@+id/headerBg"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#33A1E0"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:padding="8dp"
        android:src="@drawable/bck_btn"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/headerBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerBg" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register New User"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/headerBg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/headerBg" />

    <!-- 2. SCROLLABLE FORM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintTop_toBottomOf="@+id/headerBg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Create User Account"
                android:textColor="#757575"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Full Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/profile"
                    app:tint="#757575"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#757575"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="#757575"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#757575"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="12dp"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Username -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/profile"
                    app:tint="#757575"
                    android:layout_marginEnd="8dp"/> <!-- Key icon placeholder -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="#757575"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    app:tint="#757575"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#757575"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/eye_icon"
                android:textSize="14sp"
                android:layout_marginBottom="12dp"/>

            <!-- Confirm Password -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/ic_lock_idle_lock"
                    app:tint="#757575"
                    android:layout_marginEnd="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textColor="#757575"
                    android:textStyle="bold"/>
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="12dp"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/eye_icon"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"/>

            <!-- Role Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Role Assignment"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Credentials"
                android:textColor="#757575"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="4dp"/>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/btn_background"
                android:paddingHorizontal="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link to Record"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginBottom="24dp"/>

            <!-- Register Button & Plus FAB -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <!-- Register Button -->
                <Button
                    android:layout_width="160dp"
                    android:layout_height="45dp"
                    android:backgroundTint="#33A1E0"
                    android:text="Register"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:cornerRadius="22dp"/>

                <!-- Spacer to push FAB to right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"/>

                <!-- Plus Button (FAB style) -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/circle_outline_white"
                    android:backgroundTint="#33A1E0"
                    android:padding="12dp"
                    android:src="@drawable/baseline_add_24"
                    app:tint="@color/blue"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 3. BOTTOM NAVIGATION (Consistent with Directory) -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#33A1E0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/home"
            app:tint="@color/white" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            app:tint="@color/white"
            tools:src="@drawable/profile"/>

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_weight="1"
            android:src="@drawable/menu"
            app:tint="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>