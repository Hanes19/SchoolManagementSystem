<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#33A1E0"
    android:id="@+id/main"  android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="351dp"
        android:layout_height="80dp"
        android:text="@string/school_management_system"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.276" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="113dp"
        android:layout_height="106dp"
        app:srcCompat="@drawable/school__1_"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="53dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="205dp"
        android:layout_height="57dp"
        android:text="@string/next"
        android:textStyle="bold"
        android:backgroundTint="#5459AC"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="530dp" />

    <com.google.android.material.navigation.NavigationView
        android:layout_width="407dp"
        android:layout_height="68dp"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="824dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Education and Learning System"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="321dp" />

</androidx.constraintlayout.widget.ConstraintLayout>