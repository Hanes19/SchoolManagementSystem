<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header with Back Button -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/tv_menu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Modules"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B254B"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Search Modules -->
    <androidx.cardview.widget.CardView
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                app:tint="#A3AED0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Find a feature..."
                android:textColor="#A3AED0"
                android:textSize="14sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content Grid -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"> <!-- Padding for Bottom Nav -->

            <!-- Section 1: Academics & People -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ACADEMICS &amp; PEOPLE"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:alignmentMode="alignMargins"
                android:padding="16dp">

                <!-- Item: Classes -->
                <LinearLayout
                    android:id="@+id/btn_module_classes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to Agenda -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/classess" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#4318FF"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Classes" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Item: Timetable -->
                <LinearLayout
                    android:id="@+id/btn_module_timetable"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to Calendar -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/timetable" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#4318FF"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Timetable" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Item: Teachers -->
                <LinearLayout
                    android:id="@+id/btn_module_teachers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to Profile/People -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/teacher" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#4318FF"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Teachers" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>
            </GridLayout>

            <!-- Section 2: Management -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MANAGEMENT"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:alignmentMode="alignMargins"
                android:padding="16dp">

                <!-- Item: Fees -->
                <LinearLayout
                    android:id="@+id/btn_module_fees"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to Money -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@drawable/peso" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#FFB547"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fees" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Item: Library -->
                <LinearLayout
                    android:id="@+id/btn_module_library"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to Sort/Books -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@android:drawable/ic_menu_sort_by_size" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#FFB547"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Library" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Item: Inventory -->
                <LinearLayout
                    android:id="@+id/btn_module_inventory"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="8dp">
                    <!-- Icon Changed to View/Box -->
                    <ImageView android:layout_width="48dp" android:layout_height="48dp" android:src="@android:drawable/ic_menu_view" android:background="@drawable/rounded_corner_white_bg" android:backgroundTint="#FFFFFF" android:padding="12dp" app:tint="#FFB547"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Inventory" android:textColor="#1B254B" android:textSize="11sp" android:layout_marginTop="8dp"/>
                </LinearLayout>
            </GridLayout>

            <!-- Section 3: General -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GENERAL"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingTop="16dp">

                <!-- Profile Row -->
                <LinearLayout
                    android:id="@+id/btn_general_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/profile" app:tint="#1B254B"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="My Profile" android:textColor="#1B254B" android:textStyle="bold" android:layout_marginStart="16dp"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" android:rotation="0" app:tint="#A3AED0"/>
                </LinearLayout>

                <!-- Settings Row -->
                <LinearLayout
                    android:id="@+id/btn_general_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp">

                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/config" app:tint="#1B254B"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Settings" android:textColor="#1B254B" android:textStyle="bold" android:layout_marginStart="16dp"/>
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_media_play" android:rotation="0" app:tint="#A3AED0"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>