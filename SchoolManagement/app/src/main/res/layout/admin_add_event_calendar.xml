<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Event"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1B254B"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Main Form Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:paddingHorizontal="16dp"
                    android:hint="e.g. Sports Day"
                    android:textColor="#1B254B"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"/>

                <!-- Category Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginBottom="20dp">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Academic"
                            android:buttonTint="#4318FF"
                            android:paddingEnd="16dp"
                            android:checked="true"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Holiday"
                            android:buttonTint="#F44336"
                            android:paddingEnd="16dp"/>

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Internal"
                            android:buttonTint="#4CAF50"
                            android:paddingEnd="16dp"/>
                    </RadioGroup>
                </HorizontalScrollView>

                <!-- Date & Time Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <!-- Date Input -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Oct 24, 2025"
                                android:textColor="#1B254B"
                                android:textSize="14sp"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                app:tint="#A3AED0"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Time Input -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="12dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="10:00 AM"
                                android:textColor="#1B254B"
                                android:textSize="14sp"/>
                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                app:tint="#A3AED0"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:padding="16dp"
                    android:gravity="top|start"
                    android:hint="Add details about the event..."
                    android:textColor="#1B254B"
                    android:textSize="14sp"/>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#111C44"
        app:cardElevation="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save Event"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>