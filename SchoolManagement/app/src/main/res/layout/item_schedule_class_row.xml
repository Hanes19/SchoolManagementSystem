<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#F4F7FE"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Time Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/tv_schedule_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="00:00"
                android:textStyle="bold"
                android:textColor="#1B254B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_schedule_meridiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="AM"
                android:textColor="#A3AED0"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Vertical Colored Divider -->
        <View
            android:id="@+id/view_status_indicator"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="#2196F3"
            android:layout_marginEnd="16dp"/>

        <!-- Class Details Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_schedule_subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Subject Name"
                android:textStyle="bold"
                android:textColor="#1B254B"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_schedule_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Location â€¢ Teacher"
                android:textColor="#A3AED0"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <!-- Optional: Status Icon (Hidden by default, easier to toggle in code if needed) -->
        <ImageView
            android:id="@+id/img_status_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/checked"
            app:tint="#4CAF50"
            android:visibility="gone"
            tools:visibility="visible"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>