<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_student_profile"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/profile"
            android:background="#F4F7FE"
            android:padding="8dp"
            app:tint="#1B254B"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textStyle="bold"
                android:textColor="#1B254B"/>
            <TextView
                android:id="@+id/tv_student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: --"
                android:textColor="#A3AED0"
                android:textSize="12sp"/>
        </LinearLayout>

        <!-- Score Input Container -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/et_student_score"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#F4F7FE"
                android:hint="--"
                android:textColor="#4318FF"
                android:textStyle="bold"
                android:gravity="center"
                android:inputType="number"
                android:textSize="14sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/100"
                android:textColor="#A3AED0"
                android:textSize="12sp"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>