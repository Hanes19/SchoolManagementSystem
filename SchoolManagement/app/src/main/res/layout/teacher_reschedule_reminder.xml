<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="40dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/drag_handle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reschedule Task"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B254B"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select a new date and time for this reminder."
                android:textColor="#A3AED0"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

            <!-- Current Schedule Context -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F4F7FE">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_info"
                        app:tint="#A3AED0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currently: Today, 04:00 PM"
                        android:textColor="#1B254B"
                        android:textSize="13sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- New Date Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW DATE"
                android:textColor="#A3AED0"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_pick_new_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="#4318FF"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tomorrow, Oct 25"
                        android:textColor="#1B254B"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#A3AED0"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- New Time Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEW TIME"
                android:textColor="#A3AED0"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_pick_new_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="20dp">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="#4318FF"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="09:00 AM"
                        android:textColor="#1B254B"
                        android:textStyle="bold"
                        android:layout_marginStart="16dp"/>
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@android:drawable/ic_menu_edit"
                        app:tint="#A3AED0"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Optional Note -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REASON (OPTIONAL)"
                android:textColor="#A3AED0"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/rounded_corner_white_bg"
                android:backgroundTint="#F4F7FE"
                android:gravity="top"
                android:padding="16dp"
                android:hint="Add a reason for rescheduling..."
                android:textColor="#1B254B"
                android:textSize="14sp"
                android:inputType="textCapSentences|textMultiLine"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_confirm_reschedule"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#1B254B"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Apply New Schedule"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/btn_cancel_reschedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>