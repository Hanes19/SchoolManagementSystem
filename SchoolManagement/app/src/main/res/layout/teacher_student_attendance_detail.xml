<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_bg"
    android:paddingBottom="40dp">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/drag_handle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Summary Section -->
            <LinearLayout
                android:id="@+id/profile_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/profile"
                    android:background="#F4F7FE"
                    android:padding="12dp"
                    app:tint="#1B254B"
                    tools:ignore="ContentDescription"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jason Statham"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1B254B"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll No. 23 â€¢ Grade 10-A"
                        android:textColor="#A3AED0"
                        android:textSize="13sp"/>
                </LinearLayout>

                <!-- Contact Parent Action -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/ic_dialog_email"
                    app:tint="#4318FF"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    tools:ignore="ContentDescription"/>
            </LinearLayout>

            <!-- Quick Stats Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TERM ATTENDANCE OVERVIEW"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

                <!-- Stats Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:alignmentMode="alignMargins">

                    <!-- Attendance % Card -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F4F7FE">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:orientation="vertical" android:gravity="center">
                            <TextView android:text="Rate" android:textSize="10sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="92%" android:textSize="16sp" android:textStyle="bold" android:textColor="#05CD99" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Present Days -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginHorizontal="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F4F7FE">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:orientation="vertical" android:gravity="center">
                            <TextView android:text="Present" android:textSize="10sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="45" android:textSize="16sp" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Absent Days -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#F4F7FE">
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:orientation="vertical" android:gravity="center">
                            <TextView android:text="Absent" android:textSize="10sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            <TextView android:text="04" android:textSize="16sp" android:textStyle="bold" android:textColor="#F44336" android:layout_marginTop="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>

                <!-- Attendance Log Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RECENT ATTENDANCE LOG"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="12dp"/>

                <!-- Log List Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#F4F7FE"
                    android:padding="8dp">

                    <!-- Day Row 1 -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:gravity="center_vertical">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="Oct 23, 2025" android:textColor="#1B254B" android:textStyle="bold" android:layout_height="wrap_content"/>
                        <TextView android:text="PRESENT" android:textColor="#05CD99" android:textSize="10sp" android:textStyle="bold" android:background="#E6FFF5" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E5F2" android:layout_marginHorizontal="12dp"/>

                    <!-- Day Row 2 -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:gravity="center_vertical">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="Oct 22, 2025" android:textColor="#1B254B" android:textStyle="bold" android:layout_height="wrap_content"/>
                        <TextView android:text="ABSENT" android:textColor="#F44336" android:textSize="10sp" android:textStyle="bold" android:background="#FFEBEE" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E5F2" android:layout_marginHorizontal="12dp"/>

                    <!-- Day Row 3 -->
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="12dp" android:gravity="center_vertical">
                        <TextView android:layout_width="0dp" android:layout_weight="1" android:text="Oct 21, 2025" android:textColor="#1B254B" android:textStyle="bold" android:layout_height="wrap_content"/>
                        <TextView android:text="LATE" android:textColor="#FF9800" android:textSize="10sp" android:textStyle="bold" android:background="#FFF3E0" android:paddingHorizontal="8dp" android:paddingVertical="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Actions / Close -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="#111C44"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Back to Sheet"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>