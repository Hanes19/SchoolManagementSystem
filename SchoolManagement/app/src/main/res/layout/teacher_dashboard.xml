<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Morning,"
                android:textColor="#1B254B"
                android:textSize="14sp"
                android:letterSpacing="0.02"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mr. White"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1B254B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chemistry Department"
                android:textColor="#4318FF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"/>
        </LinearLayout>

        <!-- Notification & Profile -->
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_notification"
                app:tint="#1B254B"
                android:padding="12dp"
                tools:ignore="ContentDescription"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:cardCornerRadius="22.5dp"
            app:cardElevation="2dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/profile_pic"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <!-- Next Class / Grading Progress Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#1B254B">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chemistry 101"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IN 15 MINS"
                            android:textColor="#FFFFFF"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#40FFFFFF"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade 10-A â€¢ Lab Room 3"
                        android:textColor="#E0E5F2"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#40FFFFFF"
                        android:layout_marginVertical="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Midterm Grading Progress"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="13sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="6dp"
                        android:progress="75"
                        android:layout_marginTop="12dp"
                        android:progressDrawable="@android:drawable/progress_horizontal"
                        android:progressTint="#FFFFFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Classroom Tools Section (Updated with Messages) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CLASSROOM TOOLS"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:alignmentMode="alignMargins"
                android:layout_marginBottom="28dp">

                <!-- Attendance -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_attendance_tool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@drawable/blackboard" app:tint="#4318FF" android:background="#F4F7FE" android:padding="8dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Atten." android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="11sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Gradebook -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_gradebook_tool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@android:drawable/star_on" app:tint="#FFB547" android:background="#FFF8E1" android:padding="8dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Grades" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="11sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- NEW: Messages (Communication) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_messages_tool"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:orientation="vertical" android:gravity="center">
                        <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@android:drawable/ic_dialog_email" app:tint="#9C27B0" android:background="#F3E5F5" android:padding="8dp" tools:ignore="ContentDescription"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Messages" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginTop="12dp" android:textSize="11sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- Quick Access Links -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QUICK LINKS"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_corner_white_bg"
                android:padding="8dp"
                android:layout_marginBottom="28dp">

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/timetable" app:tint="#4318FF" tools:ignore="ContentDescription"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="My Full Schedule" android:textColor="#1B254B" android:textStyle="bold" android:layout_marginStart="16dp"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_media_play" app:tint="#A3AED0" tools:ignore="ContentDescription"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F4F7FE" android:layout_marginHorizontal="16dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp" android:gravity="center_vertical">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_edit" app:tint="#4318FF" tools:ignore="ContentDescription"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Homework / Assignments" android:textColor="#1B254B" android:textStyle="bold" android:layout_marginStart="16dp"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@android:drawable/ic_media_play" app:tint="#A3AED0" tools:ignore="ContentDescription"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Reminders / To-Do -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY'S REMINDERS"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:layout_marginBottom="16dp"/>

            <!-- Reminder Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#4318FF"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grade Chemistry 101 Midterms"
                        android:textColor="#1B254B"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 papers remaining"
                        android:textColor="#A3AED0"
                        android:textSize="11sp"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HIGH"
                    android:textColor="#F44336"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:background="@drawable/rounded_corner_white_bg"
                    android:backgroundTint="#FFEBEE"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>