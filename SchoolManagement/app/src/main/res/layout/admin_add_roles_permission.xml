<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Define New Role"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1B254B"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btn_save_role_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="8dp">

            <!-- Section 1: Role Identity -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView android:text="Role Name" android:textStyle="bold" android:textColor="#1B254B" android:textSize="14sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_role_name"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corner_white_bg"
                        android:backgroundTint="#F4F7FE"
                        android:paddingHorizontal="16dp"
                        android:hint="e.g. Library Assistant"
                        android:textColor="#1B254B"
                        android:textSize="14sp"/>

                    <TextView android:text="Brief Description" android:textStyle="bold" android:textColor="#1B254B" android:textSize="14sp" android:layout_marginTop="20dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/et_role_desc"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corner_white_bg"
                        android:backgroundTint="#F4F7FE"
                        android:gravity="top"
                        android:padding="16dp"
                        android:hint="What is this user allowed to do?"
                        android:textColor="#1B254B"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section 2: Module Permissions -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MODULE ACCESS LEVELS"
                android:textColor="#1B254B"
                android:textStyle="bold"
                android:textSize="11sp"
                android:letterSpacing="0.1"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"/>

            <!-- Permission Card: Student & Staff -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/people" app:tint="#4318FF" android:background="#F4F7FE" android:padding="6dp"/>
                        <TextView android:text="User Directory" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <Switch android:layout_width="wrap_content" android:layout_height="wrap_content" android:trackTint="#4318FF"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp">
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="View" android:textSize="12sp" android:buttonTint="#4318FF"/>
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Edit" android:textSize="12sp" android:buttonTint="#4318FF"/>
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Delete" android:textSize="12sp" android:buttonTint="#4318FF"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Permission Card: Library -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_menu_book" app:tint="#4318FF" android:background="#F4F7FE" android:padding="6dp"/>
                        <TextView android:text="Library Management" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <Switch android:layout_width="wrap_content" android:layout_height="wrap_content" android:trackTint="#4318FF" android:checked="true"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginTop="12dp">
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Catalog" android:textSize="12sp" android:buttonTint="#4318FF" android:checked="true"/>
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Issue" android:textSize="12sp" android:buttonTint="#4318FF" android:checked="true"/>
                        <CheckBox android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Fines" android:textSize="12sp" android:buttonTint="#4318FF"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Permission Card: Finance -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:padding="16dp">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/peso" app:tint="#4318FF" android:background="#F4F7FE" android:padding="6dp"/>
                        <TextView android:text="Fees &amp; Invoicing" android:textStyle="bold" android:textColor="#1B254B" android:layout_marginStart="12dp" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <Switch android:layout_width="wrap_content" android:layout_height="wrap_content" android:trackTint="#4318FF"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Footer Action -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btn_save_role_container"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="#111C44"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Save Role &amp; Permissions"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>