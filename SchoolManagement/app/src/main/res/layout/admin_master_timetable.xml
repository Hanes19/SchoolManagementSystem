<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_admin_bg">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/bck_btn"
            app:tint="#1B254B"
            tools:ignore="ContentDescription"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Master Timetable"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1B254B"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Active Classes"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Filters -->
    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textColor="#FFF"
            android:background="@drawable/rounded_blue_bg_placeholder"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade 10"
            android:textColor="#1B254B"
            android:background="@drawable/rounded_corner_white_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teachers"
            android:textColor="#1B254B"
            android:background="@drawable/rounded_corner_white_bg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Master List (Scrollable Timeline) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/filters"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="40dp">

            <!-- Time Slot: 08:00 AM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 AM - 09:00 AM"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Class Card 1 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-A: Math" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Room 304" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mr. Smith" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Class Card 2 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-B: English" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Room 102" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mrs. Jones" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Class Card 3 -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="11-A: Physics" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Lab 1" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mr. White" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Time Slot: 09:00 AM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09:00 AM - 10:00 AM"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Class Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-A: History" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Room 205" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mrs. Adams" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <!-- Class Card -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="12-A: Art" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Studio B" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Ms. Da Vinci" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Morning Break -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="24dp">

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#E0E5F2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM - Morning Break"
                    android:textColor="#1B254B"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp"/>
                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#E0E5F2"/>
            </LinearLayout>

            <!-- Time Slot: 10:30 AM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:30 AM - 11:30 AM"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-A: English" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Room 101" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mr. Keating" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="11-A: Biology" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Lab 2" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Ms. Frizzle" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Lunch Break -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp"
                android:paddingHorizontal="24dp">

                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#E0E5F2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30 AM - Lunch Break"
                    android:textColor="#FF9800"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="12dp"/>
                <View android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1" android:background="#E0E5F2"/>
            </LinearLayout>

            <!-- Time Slot: 01:00 PM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01:00 PM - 02:00 PM"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-A: PE" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Gymnasium" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Coach Carter" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Time Slot: 02:30 PM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:30 PM - 03:30 PM"
                    android:textColor="#1B254B"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="8dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="24dp"
                    android:clipToPadding="false"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="#FFFFFF"
                            android:layout_marginEnd="12dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:orientation="vertical">
                                <TextView android:text="10-A: CS" android:textStyle="bold" android:textColor="#1B254B" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Comp Lab" android:textSize="12sp" android:textColor="#A3AED0" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                                <TextView android:text="Mr. Turing" android:textSize="12sp" android:textColor="#1B254B" android:layout_marginTop="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>