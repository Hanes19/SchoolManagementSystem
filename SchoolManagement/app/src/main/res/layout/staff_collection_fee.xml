<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_bg">

    <!-- Drag Handle -->
    <View
        android:id="@+id/drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="#E0E5F2"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/drag_handle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    app:tint="#1B254B"
                    android:background="@drawable/rounded_corner_white_bg"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Collect Payment"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1B254B"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp"
                android:paddingBottom="40dp">

                <!-- Student Selection Summary -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="24dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/profile"
                            app:tint="#4318FF"
                            android:background="#F4F7FE"
                            android:padding="10dp"/>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Harry Potter"
                                android:textStyle="bold"
                                android:textColor="#1B254B"
                                android:textSize="16sp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID: 2025091 • Grade 10-A"
                                android:textColor="#A3AED0"
                                android:textSize="12sp"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Change"
                            android:textColor="#4318FF"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Payment Form -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAYMENT DETAILS"
                    android:textColor="#A3AED0"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:letterSpacing="0.1"
                    android:layout_marginBottom="12dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#FFFFFF"
                    android:layout_marginBottom="32dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Fee Category"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:paddingHorizontal="16dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tuition Fee (Term 2)"
                                android:textColor="#1B254B"
                                android:textSize="14sp"/>
                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@android:drawable/arrow_down_float"
                                app:tint="#A3AED0"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amount to Pay (₱)"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"/>
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_corner_white_bg"
                            android:backgroundTint="#F4F7FE"
                            android:paddingHorizontal="16dp"
                            android:text="5,000.00"
                            android:textColor="#4318FF"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:inputType="numberDecimal"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Method"
                            android:textColor="#1B254B"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:layout_marginTop="20dp"/>
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cash"
                                android:checked="true"
                                android:buttonTint="#4318FF"/>
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Card"
                                android:buttonTint="#4318FF"/>
                            <RadioButton
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Online"
                                android:buttonTint="#4318FF"/>
                        </RadioGroup>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Process Button (Scrolls up with the rest) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_process"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardBackgroundColor="#05CD99"
                    app:cardElevation="6dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Process Payment"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>